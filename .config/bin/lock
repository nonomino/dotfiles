#!/bin/sh

BLANK='#00000000'
CLEAR='#ffffff22'
DEFAULT='#FABD2FBB'
TEXT='#83A598FF'
WRONG='#CC241DAA'
VERIFYING='#98971AAA'

i3lock-color \
--insidever-color=$CLEAR     \
--ringver-color=$VERIFYING   \
--insidewrong-color=$CLEAR   \
--ringwrong-color=$WRONG     \
--inside-color=$BLANK        \
--ring-color=$DEFAULT        \
--line-color=$BLANK          \
--separator-color=$DEFAULT   \
--verif-color=$TEXT          \
--wrong-color=$TEXT          \
--time-color=$TEXT           \
--date-color=$TEXT           \
--layout-color=$TEXT         \
--keyhl-color=$WRONG         \
--bshl-color=$WRONG          \
--time-font="SofiaPro"       \
--date-font="SofiaPro"       \
--layout-font="SofiaPro"     \
--verif-font="SofiaPro"      \
--wrong-font="SofiaPro"      \
--wrong-font="SofiaPro"      \
--greeter-font="SofiaPro"    \
--verif-text="validate..."   \
--time-size=40               \
--date-size=20               \
--layout-size=30             \
--verif-size=16              \
--wrong-size=18              \
--greeter-size=26            \
--screen 1                   \
--image=/home/eugene/Media/Images/Wallpapers/driving-vintage.jpg \
--clock                      \
--radius=45                  \
--time-str="%H:%M:%S"        \
--date-str="%A, %Y-%m-%d"    \
--ind-pos="100:670"          \
--time-pos="1200:100"        \
# --no-verify
